{
  "name": "blood-bank-api",
  "version": "1.0.0",
  "description": "Blood Bank Backend API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "docker:build": "docker build -t blood-bank-backend .",
    "docker:run": "docker run -p 5000:5000 --env-file .env blood-bank-backend",
    "health": "node -e \"require('http').get('http://localhost:5000/api/health', (r) => {let d=''; r.on('data', c => d+=c); r.on('end', () => console.log(d))})\"",
    "deploy:railway": "railway up",
    "deploy:azure": "bash deploy-azure.sh",
    "deploy:azure:win": "deploy-azure.bat",
    "logs:azure": "az webapp log tail --name blood-bank-api --resource-group blood-bank-rg",
    "restart:azure": "az webapp restart --name blood-bank-api --resource-group blood-bank-rg"
  },
  "dependencies": {
    "@azure/cosmos": "^4.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "firebase-admin": "^12.0.0",
    "jsonwebtoken": "^9.0.0",
    "mssql": "^12.1.0",
    "nodemailer": "^7.0.12",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
